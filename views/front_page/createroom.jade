extends ./layout.jade

block content
	div(id='main')
		div(class='container box')
			h3 Hi #{username}. Let's create a new room.

			form(role='form' method='post')
				div(class='form-group')
					label(for='inputRoomTitle') Room name*
					input(type='text' class='form-control' name='roomname' id='inputRoomTitle')
				div(class='form-group')
					label(for='inputRoomSummary') Room Summary
					textarea(class='form-control' name='roomsummary' id='inputRoomSummary')
				button(type='submit' class='btn btn-default') Create Room